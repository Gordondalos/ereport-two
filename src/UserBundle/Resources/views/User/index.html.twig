{% extends '::base.html.twig' %}

{% block content %}
    <h1>User list</h1>

    <table class="records_list table">
        <thead class="thead-default">
            <tr>
                <th>User name</th>
                <th>Email</th>
                <th>Enabled</th>

                <th>Description</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.email }}</a></td>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.enabled }}</a></td>

                <td>{{ entity.description }}</td>
                <td>{{ entity.phone }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
