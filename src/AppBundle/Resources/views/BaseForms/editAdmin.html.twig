{% extends '::base.html.twig' %}
{% form_theme edit_form 'form/fields.html.twig' %}
{% block content %}
    <h1>{{ 'Report edit'|trans }}</h1>

    <h5>{{ 'Organization'|trans }}: {{ cruser.fullNameOrganization }}</h5>
    <h5>{{ 'INN'|trans }}: {{ cruser.inn}}</h5>
    <h5>{{ 'Buhgalter'|trans }}: {{ cruser.buhgalter }}</h5>
    <h5>{{ 'Buhgalter Phone'|trans }}: {{ cruser.buhgalterphone }}</h5>

    {#{{ form(edit_form) }}#}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    {{ form_row(edit_form.imageFile) }}
    {{ form_row(edit_form.formReport) }}
    {{ form_row(edit_form.typeReport) }}
    {{ form_row(edit_form.organization) }}
    {{ form_row(edit_form.area) }}
    {{ form_row(edit_form.status) }}
    {{ form_row(edit_form.description) }}


    <div class="clearfix"></div>
    <div class="row">
        <div class="clearfix"></div>
        {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-success m-y-1 btn-lg pull-xs-right'}}) }}
    </div>

    {{ form_end(edit_form) }}

        <a class="btn-primary btn m-y-1" href="{{ path('baseforms_report_admin') }}">
           {{ 'Back to the list'|trans }}
        </a>

   {{ form(delete_form) }}

{% endblock %}
