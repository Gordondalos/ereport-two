{% extends '::base.html.twig' %}

{% block content %}
    <h1>BaseForms</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Formreport</th>
                <td>{{ entity.formReport.getFormName }}</td>
            </tr>
            <tr>
                <th>Typereportid</th>
                <td>{{ entity.typeReport.getTypeName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ entity.organization.getOrganizationShortName }}</td>
            </tr>
            <tr>
                <th>Create User</th>
                <td>{{ entity.createUser.username }}</td>
            </tr>
            <tr>
                <th>Dateaccepted</th>
                <td>{{ entity.dateAccepted|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('baseforms') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('baseforms_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
