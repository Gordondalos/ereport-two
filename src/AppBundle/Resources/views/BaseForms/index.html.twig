{% extends '::base.html.twig' %}

{% block content %}
    <h1>BaseForms list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Formreport</th>
                <th>Typereportid</th>
                <th>Description</th>
                <th>Organization</th>
                <th>Fileadress</th>
                <th>Dateaccepted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('baseforms_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.formReport.getFormName}}</td>
                <td>{{ entity.typeReport.getTypeName }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.organization.getOrganizationShortName }}</td>
                <td>{{ entity.fileAdress }}</td>
                <td>{% if entity.dateAccepted %}{{ entity.dateAccepted|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('baseforms_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('baseforms_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('baseforms_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
