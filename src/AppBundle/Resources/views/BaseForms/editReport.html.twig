{% extends '::base.html.twig' %}

{% form_theme edit_form _self %}

{%- block form_row -%}
    <div class="row">
        <div class="col-xs-3">
            <div class="m-y-05">
                {{- form_label(form) -}}:
            </div>

        </div>
        <div class="col-xs-9">
            {{- form_errors(form) -}}
            <div class="m-y-05">
                {{- form_widget(form, { 'attr': {'class': 'form-control'} }) -}}

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{%- endblock form_row -%}

{% block content %}
    <h1>{{ 'Report edit'|trans }}</h1>

    {#{{ form(edit_form) }}#}
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    {{ form_row(edit_form.imageFile) }}
    {{ form_row(edit_form.formReport) }}
    {{ form_row(edit_form.typeReport) }}
    {{ form_row(edit_form.organization) }}
    {{ form_row(edit_form.area) }}
    {#{{ form_row(edit_form.status) }}#}
    {{ form_row(edit_form.description) }}

    <div class="clearfix"></div>
    <div class="row">
        <div class="clearfix"></div>
        {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-success m-y-1 btn-lg pull-xs-right'}}) }}
    </div>
    {{ form_end(edit_form) }}

        <a class="btn-primary btn m-y-1" href="{{ path('baseforms_report') }}">
           {{ 'Back to the list'|trans }}
        </a>

   {{ form(delete_form) }}

{% endblock %}
