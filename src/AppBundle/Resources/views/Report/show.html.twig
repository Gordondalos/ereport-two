{% extends '::base.html.twig' %}

{% block content%}
    <h1>Report</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Formreport</th>
                <td>{{ entity.formReport }}</td>
            </tr>
            <tr>
                <th>Typereport</th>
                <td>{{ entity.typeReport }}</td>
            </tr>
            <tr>
                <th>Datein</th>
                <td>{{ entity.dateIn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ entity.organization }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Fileadress</th>
                <td>{{ entity.fileAdress }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ entity.area }}</td>
            </tr>
            <tr>
                <th>Dateaccepted</th>
                <td>{{ entity.dateAccepted|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('report') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('report_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
