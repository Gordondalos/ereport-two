{% extends '::base.html.twig' %}

{% block content%}
    <h1 class="display-inline-block">{{ 'Area list'|trans }}</h1>

            <a class="btn btn-success pull-xs-right" href="{{ path('area_new') }}">
                {{ 'Create a new entry'|trans }}
            </a>

    <table class="records_list table">
        <thead class="thead-default">
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'Namearea'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('area_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nameArea }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('area_show', { 'id': entity.id }) }}">{{ 'show'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('area_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
