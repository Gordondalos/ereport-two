{% extends '::base.html.twig' %}

{% form_theme form _self %}

{%- block form_row -%}
    <div class="row">
        <div class="col-xs-3">
            <div class="m-y-05">
                {{- form_label(form) -}}:
            </div>

        </div>
        <div class="col-xs-9">
            {{- form_errors(form) -}}
            <div class="m-y-05">
                {{- form_widget(form, { 'attr': {'class': 'form-control'} }) -}}

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{%- endblock form_row -%}

{% block content%}
    <h1>{{ 'Status creation'|trans }}</h1>

    {#{{ form(form) }}#}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.statusName) }}

    <div class="clearfix"></div>
    <div>

        {{ form_widget(form.submit,{'attr':{'class':'btn btn-success m-y-1 btn-lg pull-xs-right'}}) }}
    </div>

    {{ form_end(form) }}


    <a class="btn btn-primary m-y-1" href="{{ path('status') }}">
        {{ 'Back to the list'|trans }}
    </a>

{% endblock %}
