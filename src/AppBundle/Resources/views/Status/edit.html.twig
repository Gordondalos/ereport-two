{% extends '::base.html.twig' %}

{% form_theme edit_form 'form/fields.html.twig' %}
{% block content%}
    <h1 class="display-inline-block">{{ 'Status edit'|trans }}</h1>

<span class="pull-xs-right">
        {{ form(delete_form) }}
</span>


    {#{{ form(edit_form) }}#}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}


    {{ form_row(edit_form.statusName) }}

    <div class="clearfix"></div>
    <div>

        {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-success m-y-1 btn-lg pull-xs-right'}}) }}
    </div>

    {{ form_end(edit_form) }}
    <a class="btn btn-primary m-y-1" href="{{ path('status') }}">
        {{ 'Back to the list'|trans }}
    </a>



{% endblock %}
